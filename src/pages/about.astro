<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}

	.timeline {
		list-style: none;
		padding: 0;
	}

	.timeline-content {
		border-left: 4px solid #7611A6;
		padding-left: 20px;
		position: relative;
		margin-bottom: 30px;
	}

	.timeline-content h3 {
		font-size: 18px;
		color: #fff;
		margin-top: 0;
	}

	.timeline-content p {
		margin: 5px 0;
	}

	.timeline-content strong {
		color: #7611A6;
	}

	.boxsup {
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.box {
		width: fit-content;
		border: 1px solid #7611A6;
		transition: 0.5s;
		padding: 10px;
		letter-spacing: 0.1em;
		cursor: pointer;
	}
	.box:hover {
		border: 1px solid #fff;
		letter-spacing: 0.2em;
	}
	.box .btn-cv {
		text-decoration: none;
		color: #fff;
	}
	.section-skills {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		justify-content: center;
	}
	@media (min-width: 1200px){
		.section-skills {
			flex-direction: row-reverse;
		}
	}
	.left-part {
		display: flex;
		flex: 1;
	}
	@media (min-width: 1200px){
		.left-part {
			display: flex;
			
		}
	}
	.img-skills {
		box-shadow: none;
		border: 0;
		border-radius: 0;
		margin: 0;
		width: 50%;
	}
	@media (min-width: 1200px){
		.img-skills {
			width: 80%;
		}
	}
	.right-part {
		float: right;
	}
    .ul {
        list-style: none;
        padding-left: 0;
    }
    .ul li {
        display: flex;
        align-items: center;
        margin-bottom: 0.8em;
    }
    .ul li i {
        color: #7611A6;
        margin-right: 0.5em;
    }
</style>
