<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about> :global(:first-child) {
			grid-column-start: 2;
			align-items: center;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}

	.accordion-dark {
		font-size: 1em;
		--bs-accordion-btn-color: white !important;
		--bs-accordion-color: white !important;
		--bs-accordion-bg: #343a40 !important;
	}
	@media (min-width: 1200px) {
		.accordion-dark {
			font-size: var(--text-lg);
		}
	}
	.accordion-body ul li {
		padding-bottom: 8px;
	}
	.accordion-button:not(.collapsed) {
		background-color: #c5c5c5 !important;
		color: #61237e;
	}

	.timeline {
		list-style: none;
		padding: 0;
	}

	.timeline-content {
		border-left: 4px solid #8633ac;
		padding-left: 20px;
		position: relative;
		margin-bottom: 30px;
	}

	.timeline-content h3 {
		font-size: 18px;
		color: #fff;
		margin-top: 0;
	}

	.timeline-content p {
		margin: 5px 0;
	}

	.timeline-content strong {
		color: #8633ac;
	}

	.glide__controls {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
		width: 100%;
		display: flex;
		justify-content: space-between;
	}

	.glide__arrow {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		transition: all 0.3s ease;
		z-index: 10;
		fill: #fff;
	}

	.glide__arrow:hover {
		fill: #8633ac !important;
	}

	.glide__arrow--left {
		left: 10px;
	}

	.glide__arrow--right {
		right: 10px;
	}

	.glide__track {
		width: 75%;
	}

	@media (min-width: 1200px) {
		.glide__track {
			width: 90%;
		}
	}

	@media (max-width: 768px) {
    .glide__slides li Icon {
        size: 4rem !important;
    }
}

	.boxsup {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.box {
		width: fit-content;
		border: 1px solid #8633ac;
		transition: 0.5s;
		padding: 10px;
		letter-spacing: 0.1em;
		cursor: pointer;
	}

	.box:hover {
		border: 1px solid #fff;
		letter-spacing: 0.2em;
	}

	.box .btn-cv {
		text-decoration: none;
		color: #fff;
	}

	.section-skills {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		justify-content: center;
	}

	@media (min-width: 1200px) {
		.section-skills {
			flex-direction: row-reverse;
		}
	}

	.left-part {
		display: flex;
		justify-content: center;
		flex: 1;
	}

	@media (min-width: 1200px) {
		.left-part {
			display: flex;

		}
	}

	.img-skills {
		box-shadow: none;
		border: 0;
		border-radius: 0;
		margin: 0;
		width: 50%;
	}

	@media (min-width: 1200px) {
		.img-skills {
			width: 80%;
		}
	}

	.right-part {
		float: right;
	}

	.ul {
		list-style: none;
		padding-left: 0;
	}

	.ul li {
		display: flex;
		align-items: center;
		margin-bottom: 0.8em;
	}

	.ul li i {
		color: #8633ac;
		margin-right: 0.5em;
	}
</style>
<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
<script src="https://unpkg.com/@glidejs/glide"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
	integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>
<script>
import Glide from "@glidejs/glide";

document.addEventListener('DOMContentLoaded', function () {
    const glide = new Glide('.glide', {
        type: 'carousel',
        autoplay: 1500,
        perView: 13,
        breakpoints: {
            768: {
                perView: 7
            },
            480: {
                perView: 5
            }
        },
    });

    glide.mount();

    const prevButton = document.querySelector('.glide__arrow--left');
    const nextButton = document.querySelector('.glide__arrow--right');

    if (prevButton && nextButton) {
        prevButton.addEventListener('click', function () {
            glide.go('<');
        });

        nextButton.addEventListener('click', function () {
            glide.go('>');
        });
    }
});

</script>
